#!/bin/bash
isoEMDir=/home/software/public_html/IsoEM/isoem-1.1.5

echo isoem v 1.1.5
mem=`free | grep -o -e 'Mem:\s*[0-9]*' | grep -o -E '[0-9]+'`
mem=$((mem/2048))
if [ -n $mem ]
then
        maxMem=-Xmx${mem}M
        startMem=-Xms${mem}M
fi
				
java $startMem $maxMem -cp "${isoEMDir}/lib/SimTools.jar" edu.uconn.engr.dna.main.FastatoGTF $@
